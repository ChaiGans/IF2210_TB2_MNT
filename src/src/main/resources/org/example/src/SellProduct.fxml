<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="314.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.src.SellCardController">
    <AnchorPane prefHeight="383.0" prefWidth="548.0" style="-fx-background-color: #F7F5F0;">
        <Button fx:id="backButton" layoutX="14.0" layoutY="13.0" onAction="#handleBackButtonAction" prefHeight="32.0" prefWidth="35.0" style="-fx-background-color: #3F3B33;">
            <graphic>
                <ImageView fitHeight="24.0" fitWidth="23.0">
                    <image>
                        <Image url="@detail/back.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <ImageView fx:id="cardImageView" fitHeight="120.0" fitWidth="120.0" layoutY="49.0" AnchorPane.leftAnchor="260.0" AnchorPane.rightAnchor="260.0" />

        <Text fx:id="cardNameText" layoutX="99.0" layoutY="196.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Name" textAlignment="CENTER" AnchorPane.leftAnchor="99.0">
            <font>
                <Font name="Segoe UI Semibold" size="25.0" />
            </font>
        </Text>
        <Button fx:id="sellButton" layoutX="268.0" layoutY="289.0" onAction="#DoSell" prefHeight="20.0" prefWidth="104.0" style="-fx-background-color: #3F3B33;" text="SELL" textFill="WHITE" textOverrun="CENTER_ELLIPSIS">
            <font>
                <Font name="Segoe UI Black" size="15.0" />
            </font>
        </Button>

        <Text fx:id="infoPrice" layoutX="99.0" layoutY="239.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Price: ">
            <font>
                <Font name="Segoe UI Semibold" size="18.0" />
            </font>
        </Text>
    </AnchorPane>
</AnchorPane>
